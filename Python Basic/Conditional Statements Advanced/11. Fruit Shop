fruit = str(input())
day = str(input())
volume = float(input())
price = 0

if day in ("Monday", "Tuesday", "Wednesday", "Thursday", "Friday"):
    if fruit == "banana":
        price = 2.5
    elif fruit == "apple":
        price = 1.20
    elif fruit == "orange":
        price = 0.85
    elif fruit == "grapefruit":
        price = 1.45
    elif fruit == "kiwi":
        price = 2.70
    elif fruit == "pineapple":
        price = 5.50
    elif fruit == "grapes":
        price = 3.85

elif day in ("Saturday", "Sunday"):
    if fruit == "banana":
        price = 2.70
    elif fruit == "apple":
        price = 1.25
    elif fruit == "orange":
        price = 0.90
    elif fruit == "grapefruit":
        price = 1.60
    elif fruit == "kiwi":
        price = 3
    elif fruit == "pineapple":
        price = 5.60
    elif fruit == "grapes":
        price = 4.2

if price != 0:
    print(f"{volume * price:.2f}")
else:
    print("error")
